{
  "name": "helfi-hav",
  "version": "1.0.0",
  "description": "Search monitoring for HELfi projects with elastic-proxy.",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run build:ts && tsc -p test/tsconfig.json && c8 node --test -r ts-node/register test/**/*.ts",
    "start": "npm run build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "info": "fastify print-routes ./routes/root.ts",
    "hav:initialize-mongo-collections": "node dist/bin/hav-init-mongo-collections.js",
    "hav:populate-email-queue": "node dist/bin/hav-populate-email-queue.js",
    "hav:send-emails-from-queue": "node dist/bin/hav-populate-email-queue.js",
    "hav:list-emails-in-queue": "node dist/bin/hav-list-emails-in-queue.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^5.0.0",
    "@fastify/mongodb": "^8.0.0",
    "@fastify/sensible": "^5.0.0",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@sinclair/typebox": "^0.32.9",
    "axios": "^1.6.7",
    "dotenv": "^16.3.1",
    "fastify": "^4.0.0",
    "fastify-cli": "^6.0.1",
    "fastify-mailer": "^2.3.1",
    "fastify-plugin": "^4.0.0",
    "nodemailer": "^6.9.9"
  },
  "devDependencies": {
    "@types/node": "^20.4.4",
    "@types/nodemailer": "^6.4.14",
    "@types/tap": "^15.0.5",
    "concurrently": "^8.2.2",
    "fastify-tsconfig": "^2.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^5.2.2"
  }
}
